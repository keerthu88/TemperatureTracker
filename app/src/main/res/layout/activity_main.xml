<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.keerguna.temperaturetracker.MainActivity"
    android:background="#f9f6d4">


<TextView
    android:layout_width="100dp"
    android:textColor="@color/black"
    android:layout_height="100dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/warning"
    android:id="@+id/textView2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:background="@drawable/tempshape"
    android:textAlignment="center"
    android:textStyle="bold|italic"
    tools:ignore="UnusedAttribute" />

<TextView
    android:layout_width="170dp"
    android:textStyle="bold"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/day1"
    android:id="@+id/day1"
    android:layout_alignParentTop="true"
    android:layout_marginTop="180dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="60dp"/>

<TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/Text"
    android:id="@+id/temp1"
    android:layout_toRightOf="@+id/day1"
    android:layout_alignParentTop="true"
    android:layout_marginTop="180dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"/>

<TextView
    android:layout_width="170dp"
    android:textStyle="bold"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/day2"
    android:id="@+id/day2"
    android:layout_alignParentTop="true"
    android:layout_marginTop="230dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="60dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/Text"
    android:id="@+id/temp2"
    android:layout_toRightOf="@+id/day2"
    android:layout_alignParentTop="true"
    android:layout_marginTop="230dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"/>

<TextView
    android:layout_width="170dp"
    android:textStyle="bold"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/day3"
    android:id="@+id/day3"
    android:layout_alignParentTop="true"
    android:layout_marginTop="280dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="60dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/Text"
    android:id="@+id/temp3"
    android:layout_toRightOf="@+id/day3"
    android:layout_alignParentTop="true"
    android:layout_marginTop="280dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"/>

<TextView
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/day4"
    android:id="@+id/day4"
    android:layout_alignParentTop="true"
    android:layout_marginTop="330dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="60dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/Text"
    android:id="@+id/temp4"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"
    android:layout_toRightOf="@+id/day4"
    android:layout_alignParentTop="true"
    android:layout_marginTop="330dp"
/>

<TextView
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/day5"
    android:id="@+id/day5"
    android:layout_alignParentTop="true"
    android:layout_marginTop="380dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="60dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/Text"
    android:textStyle="bold"
    android:id="@+id/temp5"
    android:textColor="@color/black"
    android:layout_toRightOf="@+id/day5"
    android:layout_alignParentTop="true"
    android:layout_marginTop="380dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"/>

<ToggleButton
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:text="New ToggleButton"
    android:id="@+id/toggleButton"
    android:textStyle="bold"
    android:checked="false"
    android:textOff="Fahrenheit"
    android:textOn="Celsius"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="40dp"
    android:background="@drawable/buttonshape"
    />


</RelativeLayout>
